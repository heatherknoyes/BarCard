<div class="barCard-body-box">
  <label for="text" class="text-white">Search:</label>
  <input type="text" id="text" class="text">
  <button class="search">Search Recipe</button>

  <h3 class="text-white">Currently submitted recipes: </h3>
  {{#each recipes as |drink|}}
  <div class="row my-3">
    <div class="card">
      <div class="card-header {{#if drink.is_alcoholic}}bg-success text-white{{else}}text-black{{/if}}">{{drink.drink_name}} {{#if drink.is_alcoholic}}CONTAINS ALCOHOL{{/if}}</div>
      <div class="card-body text-black">
        {{drink.instructions}}
      </div>
      <div class="card-footer text-muted">
        Posted by {{user.username}} on {{format_date createdAt}}
      </div>
    </div>
  </div>
  {{/each}}
