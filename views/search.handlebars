<div class="container barCard-body-box vh-100">
  {{!-- <label for="text" class="text-white">Search:</label>
  <input type="text" id="text" class="text">
  <button class="search">Search Recipe</button> --}}
  <h3 class="text-white text-center m-3">Recipe Library</h3>
  {{#each recipes as |drink|}}
  <div class="row m-4 box-shadow new-recipe-cards-container">
    <div class="card">
      <a href="/recipe/{{drink.id}}" class="card-header mt-2 {{#if drink.is_alcoholic}}custom-bg-red text-white{{else}}bg-success text-white{{/if}}">{{drink.drink_name}} {{#if drink.is_alcoholic}}CONTAINS ALCOHOL{{/if}} -  {{lookup ../emoticons @index}}</a>
      <div class="card-body text-black">
        {{drink.instructions}}
      </div>
      <div class="d-flex justify-content-center mb-3">
      <button id="drink_{{drink.id}}" class="drink view-button" data-drink-id="{{drink.id}}">View Recipe</button>
      </div>
      <div class="card-footer text-muted mb-2">
        Posted by {{user.username}} on {{format_date createdAt}}
      </div>
    </div>
  </div>
  {{/each}}

  <script src="/js/recipe.js"></script>
